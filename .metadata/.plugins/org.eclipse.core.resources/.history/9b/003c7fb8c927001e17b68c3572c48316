//Modifique el algoritmo anterior para calcular el nuevo salario de un obrero basándose en la siguiente tabla
import javax.swing.JOptionPane;
public class SalarioEmpeado4 {

	public static void main(String[] args) {
		String mensaje,categoria;
        double salario, salarioTotal;
        salario=Double.parseDouble(JOptionPane.showInputDialog("Digite su salario"));
        categoria=JOptionPane.showInputDialog("¿A que categoria pertenece?");
        if(categoria=="a") {
        	salarioTotal=salario*0.30+salario;
        	 mensaje= "SALARIO CON INCREMENTO\n";
             mensaje+= "Salario actual: "+salario+"\n";
             mensaje+= "Salario con incremento: "+salarioTotal;
             System.out.print(mensaje);
             
        }
        if(categoria=="b") {
        	salarioTotal=salario*0.20+salario;
        	 mensaje= "SALARIO CON INCREMENTO\n";
             mensaje+= "Salario actual: "+salario+"\n";
             mensaje+= "Salario con incremento: "+salarioTotal;
             System.out.print(mensaje);
             
        }
        if(categoria=="c") {
        	salarioTotal=salario*0.10+salario;
        	 mensaje= "SALARIO CON INCREMENTO\n";
             mensaje+= "Salario actual: "+salario+"\n";
             mensaje+= "Salario con incremento: "+salarioTotal;
             System.out.print(mensaje);
             
        }
       
 
	}

}
